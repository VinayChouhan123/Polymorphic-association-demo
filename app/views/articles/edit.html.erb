<h1>Edit Article</h1>

<%= form_for @article do |form| %> 
	<div>
		<%= form.label :name %><br>
		<%= form.text_field :name %>
	</div><br>

	<div>
		<%= form.label :auther %><br>
		<%= form.text_field :auther %>
	</div><br>

	<div>
		<%= form.label :description %><br>
		<%= form.text_area :description %>
	</div><br>

	<%= form.submit %>

<% end %>